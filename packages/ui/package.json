{
  "name": "@workly/ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "sideEffects": [
    "**/*.css.ts",
    "**/*.vanilla.css",
    "**/*.css"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./overlays": {
      "types": "./dist/overlays/index.d.ts",
      "import": "./dist/overlays/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "prettier": "@workly/prettier-config",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@vanilla-extract/css": "catalog:",
    "@vanilla-extract/dynamic": "catalog:",
    "@vanilla-extract/recipes": "catalog:",
    "@workly/icons": "workspace:*",
    "@workly/utils": "workspace:*",
    "clsx": "^2.1.1",
    "react-hook-form": "catalog:"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@vanilla-extract/esbuild-plugin": "^2.3.18",
    "@workly/eslint-config": "workspace:*",
    "@workly/prettier-config": "workspace:*",
    "typescript": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:"
  }
}
