{
  "name": "@workly/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "@workly/types": "workspace:*",
    "@workly/utils": "workspace:*"
  },
  "devDependencies": {
    "@workly/tsconfig": "workspace:^",
    "typescript": "catalog:",
    "tsup": "^8.3.0",
    "rimraf": "^6.0.1",
    "@workly/eslint-config": "workspace:*",
    "@workly/prettier-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:"
  },
  "prettier": "@workly/prettier-config",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "peerDependencies": {
    "typescript": ">=5.2.0"
  }
}
