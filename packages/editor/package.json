{
  "name": "@workly/editor",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "prettier": "@workly/prettier-config",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@lexical/code": "^0.37.0",
    "@lexical/html": "^0.37.0",
    "@lexical/link": "^0.37.0",
    "@lexical/list": "^0.37.0",
    "@lexical/markdown": "^0.37.0",
    "@lexical/react": "^0.37.0",
    "@lexical/rich-text": "^0.37.0",
    "@lexical/selection": "^0.37.0",
    "@lexical/table": "^0.37.0",
    "@lexical/text": "^0.37.0",
    "@lexical/utils": "^0.37.0",
    "@vanilla-extract/css": "catalog:",
    "@vanilla-extract/dynamic": "catalog:",
    "@vanilla-extract/recipes": "catalog:",
    "@workly/ui": "workspace:*",
    "lexical": "^0.37.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "catalog:",
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@workly/eslint-config": "workspace:*",
    "@workly/prettier-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "peerDependencies": {
    "@workly/ui": "workspace:*",
    "react": ">=18",
    "react-dom": ">=18"
  }
}
