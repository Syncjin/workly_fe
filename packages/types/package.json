{
  "name": "@workly/types",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "sideEffects": false,
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts"
    },
    "./common": {
      "types": "./dist/common/index.d.ts"
    },
    "./common/*": {
      "types": "./dist/common/*.d.ts"
    },
    "./domain": {
      "types": "./dist/domain/index.d.ts"
    },
    "./domain/*": {
      "types": "./dist/domain/*.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "prettier": "@workly/prettier-config",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -p tsconfig.json -w",
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@workly/tsconfig": "workspace:*",
    "rimraf": "^6.0.1",
    "typescript": "catalog:",
    "@workly/eslint-config": "workspace:*",
    "@workly/prettier-config": "workspace:*",
    "eslint": "catalog:",
    "prettier": "catalog:"
  },
  "peerDependencies": {
    "typescript": ">=5.2.0"
  }
}
