{
  "extends": "@workly/tsconfig/base.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false,
    "types": [],
    "baseUrl": ".",
    "verbatimModuleSyntax": true,
    "paths": {
        "@workly/types/common/*": ["src/common/*"],
        "@workly/types/domain/*": ["src/domain/*"]
    }
  },
  "include": ["src"]
}
