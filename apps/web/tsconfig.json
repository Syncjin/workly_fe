{
  "extends": "@workly/tsconfig/next-app.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/shared/*": ["./src/shared/*"],
      "@/features/*": ["./src/features/*"],
      "@/assets/*": ["./src/assets/*"],
      "@/entities/*": ["./src/entities/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/widgets/*": ["./src/widgets/*"],
      "@/tests/*": ["./tests/*"]
    },
    "esModuleInterop": true
  },
  "include": ["next-env.d.ts", "src", "app", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
